<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <a href="/">Home</a>
    <h1 class="text-center">Student Detials:</h1>
    <div>
        <table class="table table-striped">
            <tr>
                <th scope="col">student Name</th>
                <th scope="col">Address</th>
                <th scope="col">pincode</th>
                <th scope="col">mobile</th>
                <th scope="col">email</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            <% studentData.forEach(value => { %>
            <tr>
                <td><%= value.name %></td>
                <td><%= value.address %></td>
                <td><%= value.pincode %></td>
                <td><%= value.mobile %></td>
                <td><%= value.email %></td>
                <td><a href="/student/update/<%= value._id %>"><input type="button" value="Edit" id="edit" class="btn btn-secondary"></a></td>
                <td><a href="/student/<%= value._id %>"><input type="button" value="Delete" id="delete" class="btn btn-danger"></a></td>
            </tr>
            <% }) %>
        </table>
    </div>
    <script src="/student.js"></script>
</body>
</html>